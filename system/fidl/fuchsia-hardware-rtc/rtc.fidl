library fuchsia.hardware.rtc;

using zx;

struct Time {
    uint8 seconds;
    uint8 minutes;
    uint8 hours;
    uint8 day;
    uint8 month;
    uint16 year;
};

[Layout = "Simple"]
interface Device {
    // Get the current RTC time
    1: Get() -> (Time rtc);

    // Set the RTC time
    2: Set(Time rtc) -> (zx.status status);
};
